<%include partials/header%>

<div class="container" style="margin-bottom: 7rem !important;">
	<div class="well bs-component">
		<h1>Log In!</h1>
		<form action="/login" method="post">

			

			<div class="form-group">
				<label for="username">Username</label>
				<input required aria-describedby="basic-addon1" id="username" class="form-control" aria-describedby="usernameHelp" type="text" name="username" placeholder="Username" pattern="^[a-zA-Z0-9_-]{3,20}$" title="Your login should be 3-20 characters long and can contain letters, numbers and '-', '_' signs">
				<small id="usernameHelp" class="form-text text-muted">Your login should be 3-20 characters long and can contain letters, numbers and '-', '_' signs</small>
			</div>
			<div class="form-group">
				<label for="password">Password</label>
				<input required aria-describedby="basic-addon1" class="form-control" id="password" type="password" aria-describedby="passwordHelp" name="password" autocomplete="off" placeholder="Password" pattern="(?!^[0-9]*$)(?!^[a-zA-Z]*$)^([a-zA-Z0-9]{6,15})$" title="Your password should be at least 6 symbols long and contain letters and numbers">
				<small id="passwordHelp" class="form-text text-muted">Your password should be at least 6 symbols long and contain letters and numbers</small>
			</div>
			<div class="form-group">
				<a href="/forgot">Forgot your password?</a>
			</div>
			<div class="form-group">
				<button class="btn btn-primary btn-block" type="submit">Submit</button>
			</div>


		</form>
		<hr>
		<form action="/auth/42" method="get">
			<button class="btn btn-warning btn-block">Intra 42 Login</button>
		</form>
		<form action="/auth/github" method="get">
			<button class="btn btn-secondary btn-block">Sign in with GitHub <i class="fab fa-github"></i></button>
		</form>
		</div>
</div>

<%include partials/footer%>
